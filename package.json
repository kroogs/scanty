{
  "name": "scanty",
  "version": "0.3.0",
  "description": "A small library for building toy lexers.",
  "keywords": ["lex", "lexer", "scan", "scanner", "token", "tokenize", "tokenizer"],
  "homepage": "https://github.com/kroogs/scanty",
  "author": "Justin Krueger <justin@kroo.gs>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kroogs/scanty.git"
  },
  "bugs": {
    "url": "https://github.com/kroogs/scanty/issues"
  },
  "main": "./lib/scanty.min.js",
  "files": [
    "lib",
    "src",
    "test"
  ],
  "scripts": {
    "build": "webpack -p",
    "test": "jest --coverage",
    "test-dev": "jest --watch --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "prettier --no-color --trailing-comma all --no-semi --single-quote --write \"src/**/*.js\" && eslint --fix src",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.0",
    "esdoc": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.9.0",
    "eslint-plugin-import": "^2.8.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "prettier": "^1.7.4",
    "webpack": "^3.8.1"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "dependencies": {
    "yaemit": "^1.8.0"
  }
}
